package recfun

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    }
  }

  /**
   * Exercise 1
   */
  def pascal(c: Int, r: Int): Int = {
    if (c == 0 || c == r) 1
    else pascal(c - 1, r - 1) + pascal(c, r - 1)
  }

  /**
   * Exercise 2
   */
  def balance(chars: List[Char]): Boolean = {
    def bal(count: Int, chars: List[Char]): Boolean = {
      if (chars.isEmpty) count == 0
      else if (chars.head == '(') if (co) false else bal(stack.tail, chars.tail)
      else if (chars.head == ')') bal(chars, chars.tail)
      else bal(count, chars.tail)
    }
    bal(0, chars)
  }

